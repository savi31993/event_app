<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row col-md-6 col-md-offset-2 custyle">
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>Event</th>
            <th>Organized by</th>
            <th>Category</th>
            <th>Description</th>
            <% if @event.owner == current_user %>
              <th class="text-center">Action</th>
            <% end %>
            <th>Status</th>

        </tr>
    </thead>
            <tr>
                <td><%= @event.name %></td>
                <td><%= link_to @event.owner.name, @event.owner %></td>
                <td><%= link_to @event.category.name, @event.category %></td>
                <td><%= @event.description %></td>
                <% if @event.owner == current_user %>
                  <td class="text-center">
                    <%= link_to '', edit_event_path, class: 'btn btn-info btn-xs glyphicon glyphicon-pencil' %>
                    <%= link_to '', event_path, :method => :delete, class: 'btn btn-danger btn-xs glyphicon glyphicon-trash' %>
                  </td>
                <% end %>
                <td>
                  <div class="col-xs-12 col-md-6">
                    <% if @has_rsvp_ed && @status %>
                      <%= button_to 'Going', change_status_path(:event_id => @event.id, :new_status => true), :method => :post, class: 'btn btn-success active' %>
                    <% else %>
                      <%= button_to 'Going', change_status_path(:event_id => @event.id, :new_status => true), :method => :post, class: 'btn btn-success' %>
                    <% end %>
                  </div>
                  <div class="col-xs-12 col-md-6">
                    <% if @has_rsvp_ed && !@status %>
                      <%= button_to 'Not going', change_status_path(:event_id => @event.id, :new_status => false), :method => :post, class: 'btn btn-danger active', style: 'float: right;' %>
                    <% else %>
                      <%= button_to 'Not going', change_status_path(:event_id => @event.id, :new_status => false), :method => :post, class: 'btn btn-danger', style: 'float: right;' %>
                    <% end %>
                  </div>
                </td>
            </tr>

    </table>
    </div>
</div>

