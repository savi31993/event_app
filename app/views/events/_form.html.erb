<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="LoginForm">
    <div class="container">
      <div class="login-form">
        <div class="main-div">
          <div class="panel">
            <h2>Create new Event</h2>
          </div>
          <div id="Login" class="form-group">
            <%= form.text_field :name, class: "form-control", placeholder: "Event name" %>
            <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
            <%= form.collection_select :category_id, @categories, :id, :name, include_blank: true, class: "dropdown" %>
            <div class="field">
              <%= form.label 'Time of Event' %>
              <%= form.text_field :date, class: "form-control", id: "dateselection" %>
            </div>
            <%= form.text_field :address, class: "form-control", placeholder: "Address" %>
            <%= form.file_field :image %>
            <%= form.submit 'Create Event', class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  const el = document.getElementById('dateselection');
  flatpickr(el, {
    enableTime:      true,
    altInput:        true,
    minDate:         "today",
    altFormat:       "F j, Y at h:i K",
    dateFormat:      "Y-m-d H:i",
    defaultHour:     23,
    defaultMinute:   59,
    minuteIncrement: 1
  });
</script>
