            <%= form.text_field :name, class: "form-control", placeholder: "Event name" %>
            <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
            <%= form.collection_select :category_id, @categories, :id, :name, include_blank: true, class: "dropdown" %>
            <%= form.submit 'Create Event', class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
