<p id="notice"><%= notice %></p>

<h3>Categories</h3>

<div class="container">
  <div class="row">
          <% @categories.each do |category| %>
              <div class="col-sm-12 col-md-6 col-lg-3">
                <!--Card-->
                <div class="card hoverable">

                  <!--Card image-->
                  <img class="img-fluid" src="image/image4.jpg" alt="Card image cap">

                  <!--Card content-->
                  <div class="card-body">
                    <!--Title-->
                    <h4 class="card-title"><%= link_to category.name, category %></h4>
                    <!--Text-->
                    <p class="card-text"><%= category.description %></p>
                  </div>

                </div>
                <!--/.Card-->
              </div>
          <% end %>
        </div>
      </div>

<br>
<% if current_user %>
  <%= link_to 'New Category', new_category_path, class:"btn btn-default btn-help" %>
<% end %>

