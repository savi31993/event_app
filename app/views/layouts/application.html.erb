<!DOCTYPE html>
<html>
  <head>
    <title>EventPlanner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="https://bootswatch.com/4/simplex/bootstrap.min.css"/>
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Oswald|Raleway|Roboto" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg">

    <header>
      <nav class="navbar-expand-sm bg-light">
        <ul class="navbar nav">

          <li class="nav-item nav justify-content-right">
            <h1><%= link_to "EventPlanner", '/' %></h1>
          </li>
          <% if current_user %>
            <li class="nav-item nav justify-content-end ml-auto"> Hi, <%= current_user.name %> </li>
            <li class="nav-item nav justify-content-end"> <%= link_to "Create a new event", new_event_path %> </li>
            <li class="nav-item nav justify-content-end"> <%= link_to "Log out", logout_path, method: :delete %> </li>
          <% else %>
            <li class="nav-item nav justify-content-end ml-auto"> <%= link_to "Log in", login_path %> </li>
            <li class="nav-item nav justify-content-end"> <%= link_to "Sign up", new_user_path %> </li>
          <% end %>
        </ul>
      </nav>
    </header>

    <%= yield %>

    <footer class="footer">
      <div class="text-center">
        <a class="btn btn-default" href="https://twitter.com" target="_blank"><i class="fa fa-twitter"></i></a>
        <a class="btn btn-default" href="#"><i class="fa fa-facebook"></i></a>
        <a class="btn btn-default" href="#"><i class="fa fa-google-plus"></i></a>
        <a class="btn btn-default" href="#"><i class="fa fa-instagram"></i></a>
        <a class="btn btn-default" href="#"><i class="fa fa-linkedin"></i></a>
        <p>Presented by
          <%= link_to "EventPlanner", '/' %>
        </p>
      </div>
    </div>
  </body>
</html>
